# Strapi Configuration
NUXT_PUBLIC_STRAPI_URL=http://localhost:1337
NUXT_PUBLIC_STRAPI_TOKEN=your_strapi_public_token_here

# App Configuration
NUXT_PUBLIC_APP_NAME=Mon Projet
NUXT_PUBLIC_APP_DESCRIPTION=Description de mon projet

# Monitoring Configuration (PRODUCTION ONLY)
# Ces variables ne sont utilisées qu'en production (NODE_ENV=production)
# En développement, le monitoring est désactivé automatiquement

# Sentry Configuration
NUXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
NUXT_PUBLIC_SENTRY_ENVIRONMENT=production
NUXT_PUBLIC_SENTRY_RELEASE=1.0.0
NUXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.1
NUXT_PUBLIC_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.1
NUXT_PUBLIC_SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=1.0

# Analytics Configuration
NUXT_PUBLIC_ENABLE_ANALYTICS=true

# Google Analytics 4 Configuration
NUXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NUXT_PUBLIC_GA_DEBUG_MODE=false

# Plausible Analytics Configuration
NUXT_PUBLIC_PLAUSIBLE_DOMAIN=your-domain.com

# Google Tag Manager Configuration
NUXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Uptime Robot Configuration
NUXT_PUBLIC_UPTIME_ROBOT_API_KEY=your_uptime_robot_api_key_here
NUXT_PUBLIC_UPTIME_ROBOT_MONITOR_ID=your_monitor_id_here
NUXT_PUBLIC_UPTIME_ROBOT_CHECK_INTERVAL=300
NUXT_PUBLIC_UPTIME_ROBOT_ENABLE_ALERTS=true

# Grafana Configuration
NUXT_PUBLIC_GRAFANA_URL=http://localhost:3000
NUXT_PUBLIC_GRAFANA_API_KEY=your_grafana_api_key_here

# Performance Monitoring
NUXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NUXT_PUBLIC_ENABLE_ERROR_TRACKING=true
NUXT_PUBLIC_ENABLE_USER_BEHAVIOR_TRACKING=true

